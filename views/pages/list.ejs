<h1 class="display-6">All Users</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Surname</th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach( function (user) { %>
        <tr>
            <td><%= user.id %> </td>
            <td><%= user.name %> </td>
            <td><%= user.surname %> </td>
            <td>
                <a href="/user/edit/<%= user.id %>" class="btn btn-primary">Edit</a>
                <form action="/user/delete/<%= user.id %>" method="POST" class="d-inline">
                    <input type="submit" class="btn btn-danger" value="Delete">
                </form>
            </td>
        </tr>
        <% }); %>
    </tbody>
</table>